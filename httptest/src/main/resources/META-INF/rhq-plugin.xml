<?xml version="1.0" encoding="UTF-8" ?>

<plugin name="Victims" displayName="Victims plugin"
	description="Monitoring of vulnerable Jars" package="org.rhq.plugins.victims"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="urn:xmlns:rhq-plugin"
	xmlns:c="urn:xmlns:rhq-configuration">

	<server name="VictimsPlugin" discovery="VictimsDiscoveryComponent"
		class="VictimsComponent" description="Victims Check">

		<plugin-configuration>
			<c:list-property name="Paths to Test">
				<c:simple-property name="path" displayName="Path"
					type="string" required="true" />
			</c:list-property>
		</plugin-configuration>

	</server>

</plugin>        